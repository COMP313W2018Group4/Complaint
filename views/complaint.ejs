<% include partials/header.ejs %>

    <section class="section skipNavbar"></section>
    <main class="container mar-top30 mar-bot30">
        <div class="col-lg-12 mar-bot30">
            <h1 class="text-center text-uppercase">Complaint</h1>
            <hr>
        </div>

        <form method="post" action="#">
            <!-- Title of Complaint -->
            <div class="row">
                <div class="form-group col-lg-4 offset-2">
                    <label class="cols-sm-2 control-label">Title of Complaint:</label>
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-user fa" aria-hidden="true"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control formInput" name="title" required autofocus placeholder="Enter the title of the complaint"
                        />
                    </div>
                </div>
            </div>

            <!-- Type of Complaint Row -->
            <div class="row">
                <div class="form-group col-lg-4 offset-2">
                    <label class="cols-sm-2 control-label">Type of Complaint:</label>
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-user fa" aria-hidden="true"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control formInput" name="typeComplaint" required autofocus placeholder="Enter the type of complaint"
                        />
                    </div>
                </div>
            </div>

            <!-- Product Row -->
            <div class="row">
                <div class="form-group col-lg-4 offset-2">
                    <label class="cols-sm-2 control-label">Product:</label>
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-user fa" aria-hidden="true"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control formInput" name="product" required autofocus placeholder="Enter the name of the product"
                        />
                    </div>
                </div>
            </div>

            <!-- Description Row -->
            <div class="row">
                <div class="form-group col-lg-4 offset-2">
                    <label class="cols-sm-2 control-label">Description of Complaint:</label>
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-user fa" aria-hidden="true"></i>
                            </span>
                        </div>
                        <input type="text" class="form-control formInput" name="description" required autofocus placeholder="Enter the description of the complaint"
                        />
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <button type="button" class="btn btn-primary btn-lg btn-block mar-top30 text-uppercase col-lg-4 offset-sm-4">Submit Complaint</button>
            </div>
            <div class="col-lg-2"></div>
        </form>


        <section class="section"></section>
        <% include partials/footer.ejs %>